{
  "name": "lit-atoms",
  "version": "1.0.0",
  "description": "A web component library built with Lit Elements",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./react": {
      "types": "./wrappers/react/dist/index.d.ts",
      "import": "./wrappers/react/dist/index.js",
      "default": "./wrappers/react/dist/index.js"
    },
    "./angular": {
      "types": "./wrappers/angular/dist/index.d.ts",
      "import": "./wrappers/angular/dist/index.js",
      "default": "./wrappers/angular/dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "build:wrappers": "npm run build:react && npm run build:angular",
    "build:react": "cd wrappers/react && npm install && npm run build",
    "build:angular": "cd wrappers/angular && npm install && npm run build",
    "build:all": "npm run build && npm run build:wrappers",
    "dev": "tsc --watch",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "playground": "vite",
    "build-playground": "vite build",
    "test": "echo \"No tests specified yet\" && exit 0",
    "tokens:build": "node config/style-dictionary.config.mjs",
    "tokens:sync": "node scripts/sync-figma-tokens.mjs",
    "tokens:test": "node scripts/test-integration.mjs",
    "figma:sync": "node scripts/figma-mcp.mjs",
    "figma:status": "node scripts/figma-mcp.mjs status",
    "demo:integration": "bash scripts/demo-integration.sh"
  },
  "keywords": [
    "web-components",
    "lit",
    "lit-element",
    "components",
    "ui-library"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "lit": "^3.3.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@figma/rest-api-spec": "^0.34.0",
    "@storybook/addon-a11y": "^10.1.8",
    "@storybook/addon-docs": "^10.1.8",
    "@storybook/addon-vitest": "^10.1.8",
    "@storybook/web-components-vite": "^10.1.8",
    "@types/node": "^25.0.1",
    "@vitest/browser-playwright": "^4.0.15",
    "@vitest/coverage-v8": "^4.0.15",
    "dotenv": "^17.2.3",
    "playwright": "^1.57.0",
    "storybook": "^10.1.8",
    "style-dictionary": "^5.1.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.7",
    "vitest": "^4.0.15"
  }
}
