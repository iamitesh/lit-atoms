{
  "name": "lit-atoms",
  "version": "1.0.0",
  "description": "A web component library built with Lit Elements",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "playground": "vite",
    "build-playground": "vite build",
    "test": "echo \"No tests specified yet\" && exit 0",
    "tokens:build": "node config/style-dictionary.config.mjs",
    "tokens:sync": "node scripts/sync-figma-tokens.mjs",
    "tokens:test": "node scripts/test-integration.mjs",
    "figma:sync": "node scripts/figma-mcp.mjs",
    "figma:status": "node scripts/figma-mcp.mjs status",
    "demo:integration": "bash scripts/demo-integration.sh",
    "mfe:install": "cd shell && npm install && cd ../playground/react && npm install && cd ../next && npm install",
    "mfe:shell": "cd shell && npm run dev",
    "mfe:react": "cd playground/react && npm run dev",
    "mfe:angular": "cd playground/angular && npm run dev",
    "mfe:next": "cd playground/next && npm run dev",
    "mfe:all": "npm run mfe:shell & npm run mfe:react & npm run mfe:next",
    "test:mfe": "playwright test --config=playwright.config.mfe.js"
  },
  "keywords": [
    "web-components",
    "lit",
    "lit-element",
    "components",
    "ui-library"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "lit": "^3.3.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@figma/rest-api-spec": "^0.34.0",
    "@playwright/test": "^1.58.2",
    "@storybook/addon-a11y": "^10.1.8",
    "@storybook/addon-docs": "^10.1.8",
    "@storybook/addon-vitest": "^10.1.8",
    "@storybook/web-components-vite": "^10.1.8",
    "@types/node": "^25.0.1",
    "@vitest/browser-playwright": "^4.0.15",
    "@vitest/coverage-v8": "^4.0.15",
    "dotenv": "^17.2.3",
    "playwright": "^1.57.0",
    "storybook": "^10.1.8",
    "style-dictionary": "^5.1.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.7",
    "vitest": "^4.0.15"
  }
}
